.loader
	hideselect()
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary url('../../images/loader.gif') center no-repeat
	background-size 15px
	z-index 10000
	-webkit-perspective 0
	-webkit-backface-visibility hidden
	#preload-logo
		background url('../../images/sens_logo_animated.gif') no-repeat -9999px -9999px

header
	hideselect()
	margin 3em 0 0
	padding 0 ($padding*3)
	+below($tablet)
		padding 0 $padding
	h1
		opacity 0
	ul
		flexbox()
		align-items center
		list-style-type none
		li
			font-family 'BB'
			flex-grow 1
			text-align center
			width 17.5%
		li:nth-child(1), li:nth-child(2)
			text-align left
			+below($tablet)
				display none
		li:nth-child(4), li:nth-child(5)
			text-align right
			+below($tablet)
				display none
		li.menu-toggle
			display none
			cursor pointer
			text-transform uppercase
			text-align right
			+below($tablet)
				display block
		li.logo
			width 30%
			height 100px
			+below($tablet)
				height 50px
			a
				width 100%
				height 100%
				display block
				background-image url('../../images/sens_logo.png')
				background-size contain
				background-repeat no-repeat
				background-position center
				+below($tablet)
					background-position left
			a:hover
				background-image url('../../images/sens_logo_animated.gif')

nav.mobile-menu
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
	background $blue
	color $primary
	text-align center
	z-index 1000
	-webkit-transition -webkit-transform 350ms ease
	-moz-transition -moz-transform 350ms ease
	-o-transition -o-transform 350ms ease
	transition transform 350ms ease
	transform(translate3d(100%,0,10px))
	+below($tablet)
		display block
	ul
		flexbox()
		flex-direction column
		align-items center
		justify-content center
		width 100%
		height 100%
		li
			margin .3em 0
nav.mobile-menu.is-visible
	transform(translate3d(0%,0,10px))

footer
	background $blue
	color $primary
	display inline-block
	width 100%
	.column
		col(1/3, gutter: 10, cycle:3)
		+below($mobile)
			stack()
		h3
			margin-top 0
			margin-bottom 2em
	.socials
		margin-bottom 4em
		li
			display inline-block
			margin-right 1em
		i
			font-size 25px
	nav.languages
		ul
			li
				display inline-block
				margin-right .2em
			li:not(.active)
				a, a:hover, a:visited, a:focus
					font-family 'BR'