.loader
	hideselect()
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary url('../../images/loader.gif') center no-repeat
	background-size 15px
	z-index 10000
	#preload-logo
		background url('../../images/sens_logo_animated.gif') no-repeat -9999px -9999px

header
	hideselect()
	margin 3em 0 0
	padding 0 ($padding*3)
	h1
		opacity 0
	ul
		flexbox()
		align-items center
		list-style-type none
		li
			font-family 'BB'
			flex-grow 1
			text-align center
			width 17.5%
		li:nth-child(1), li:nth-child(2)
			text-align left
		li:nth-child(4), li:nth-child(5)
			text-align right
		li.logo
			width 30%
			height 100px
			a
				width 100%
				height 100%
				display block
				background-image url('../../images/sens_logo.png')
				background-size contain
				background-repeat no-repeat
				background-position center
			a:hover
				background-image url('../../images/sens_logo_animated.gif')

footer
	background $blue
	color $primary
	display inline-block
	width 100%
	.column
		col(1/3, gutter: 10, cycle:3)
		+below($mobile)
			stack()
		h3
			margin-top 0
			margin-bottom 2em
	.socials
		margin-bottom 4em
		li
			display inline-block
			margin-right 1em
		i
			font-size 25px
	nav.languages
		ul
			li
				display inline-block
				margin-right .2em
			li:not(.active)
				a, a:hover, a:visited, a:focus
					font-family 'BR'