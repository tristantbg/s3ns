@import 'nib'
@import '../../node_modules/jeet/stylus/jeet/*'
@import '_mixins.styl'

// Media queries
$desktop = 1600px
$laptop = 1100px
$tablet = 768px
$mobile = 400px

// Colors
$back ?= #fffefe
$primary ?= #ffffff
$blue ?= #213142
$yellow ?= #efd16f

// Metrics
$padding = 5vw

//edit()

@import 'general.styl'
@import 'headers.styl'

.featured-project
	position relative
	overflow hidden
	background-size cover
	background-position center
	cursor pointer
	#video
		position absolute
		align()
		min-width 100%
		min-height 100%
		width auto
		height auto
		overflow hidden
		+below($tablet)
			display none
	.overlay
		color $primary
		.left
			position absolute
			bottom 4rem
			left $padding
			span
				float left
				margin-right 1em
			h2
				margin-bottom 0
			img
				max-width 50px
		.right
			position absolute
			top ($padding)
			right ($padding)
			li
				display inline-block
				margin-right .3em
				font-size 35px
			i
				display inline-block
				opacity 0.7
				transition(opacity)
			i:hover
				opacity 1

.projects
	padding-bottom 0
	.project
		margin-bottom 3%
		cursor pointer
		+above($tablet)
			col(1/3, gutter: 3, cycle:3)
		+below($tablet)
			col(1/2, gutter: 3, cycle:2)
		+below($mobile)
			stack()
		.project-logo
			span(1)
			transition(opacity, 500ms)
			opacity 0.3
			img
				max-width 140px
		.project-subtitle
			span(1)
		.video-loop
			span(1)
			position relative
			overflow hidden
			#video
				display none
				position absolute
				top 0
				left 0
				width 100%
				height auto
				
	.project:hover
		.project-logo
			opacity 0.7
		#video
			+above($tablet)
				display block

.quotes
	max-width 50em
	margin 0 auto
	h4
		margin-bottom 2em
	.slick-dots 
		li
			margin 0
			button:before
				opacity 1
				color $blue
				font-size 10px
		li.slick-active
			button:before
				opacity 1
				color $yellow

#founders
	article
		col(1/3, gutter: 0.8, cycle:3)
		h4
			margin 1em 0 0
		h4:last-child
			margin 0 0 1em

#numbers
	article
		span(1/3)
		img
			opacity 0.3

#team
	span(1)
	background #ebebec
	.row
		padding-bottom 0
	article
		col(1/4, cycle:4)
		margin-bottom ($padding*1.5)
		+below($tablet)
			col(1/2, cycle:2)
		img
			margin-bottom 1em
		h4
			margin 0

#lightbox
	z-index 10000
	transition()
	opacity 0
	visibility hidden
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,0.8)
	padding 0 ($padding*3)
	overflow hidden
	overflow-y scroll
	.inner
		span(1)
		margin $padding 0
		background $primary
		#project-title
			display none

body.lightbox
	overflow hidden
	#lightbox
		opacity 1
		visibility visible