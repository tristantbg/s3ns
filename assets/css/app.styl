@import 'nib'
@import '../../node_modules/jeet/stylus/jeet/*'
@import '_mixins.styl'

// Media queries
$desktop = 1600px
$laptop = 1100px
$tablet = 768px
$mobile = 400px

// Colors
$back ?= #fffefe
$primary ?= #ffffff
$blue ?= #213142
$yellow ?= #efd16f

// Metrics
$padding = 5vw

//edit()

@import 'general.styl'
@import 'headers.styl'

.featured-project
	position relative
	overflow hidden
	background-size cover
	background-position center
	cursor pointer
	color $primary
	#video
		position absolute
		align()
		min-width 100%
		min-height 100%
		width auto
		height auto
		overflow hidden
		+below($tablet)
			display none
	.overlay
		z-index 100
	.left, .right
		z-index 200
	.left
		position absolute
		bottom 4rem
		left $padding
		span
			float left
			margin-right 1em
		h2
			margin-bottom 0
		img
			max-width 50px
	.right
		position absolute
		top ($padding)
		right ($padding)
		li
			display inline-block
			margin-right .3em
			font-size 35px
		i
			display inline-block
			opacity 0.7
			transition(opacity)
		i:hover
			opacity 1

.projects
	padding-bottom 0
	.project
		margin-bottom 3%
		cursor pointer
		+above($tablet)
			col(1/3, gutter: 3, cycle:3)
		+below($tablet)
			col(1/2, gutter: 3, cycle:2)
			margin-bottom 30px
		+below($mobile)
			stack()
		.project-logo
			span(1)
			transition(opacity, 500ms)
			opacity 0.3
			text-align center
			img
				display block
				margin 0 auto
				max-width 140px
		.project-subtitle
			span(1)
		.video-loop
			span(1)
			position relative
			overflow hidden
			#video
				display none
				position absolute
				top 0
				left 0
				width 100%
				height auto
				
	.project:hover
		.project-logo
			opacity 0.7
		#video
			+above($tablet)
				display block

.quotes
	max-width 50em
	margin 0 auto
	h4
		margin-bottom 2em
	.slick-dots 
		li
			margin 0
			button:before
				opacity 1
				color $blue
				font-size 10px
		li.slick-active
			button:before
				opacity 1
				color $yellow

#founders
	article
		col(1/3, gutter: 0.8, cycle:3)
		h4
			margin 1em 0 0
		h4:last-child
			margin 0 0 1em

#numbers
	article
		span(1/3)
		img
			opacity 0.3

#team
	span(1)
	background #ebebec
	.row
		padding-bottom 0
	article
		col(1/4, cycle:4)
		margin-bottom ($padding*1.5)
		+below($tablet)
			col(1/2, cycle:2)
		img
			margin-bottom 1em
		h4
			margin 0

#lightbox
	z-index 1000
	transition(all, 500ms)
	opacity 0
	visibility hidden
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,0.8)
	overflow hidden
	overflow-y scroll
	cursor pointer
	padding ($padding*2) $padding
	-webkit-perspective 0
	-webkit-backface-visibility hidden
	+below($tablet)
		padding ($padding*2) 0
	.inner
		cursor auto
		span(8/12, offset: 2/12)
		-webkit-transition -webkit-transform 250ms ease
		-moz-transition -moz-transform 250ms ease
		-o-transition -o-transform 250ms ease
		transition transform 250ms ease
		opacity 0
		transform(translateY(20px))
		background $primary
		border-radius 5px
		box-shadow(0 0 15px 0 rgba(0,0,0,0.5))
		padding 0.5em
		-webkit-perspective 0
		-webkit-backface-visibility hidden
		+below($tablet)
			width 90%
			margin-left 5%
			padding 0.3em
		#project-title, #project-details
			display none
	.more
		transition(opacity,250ms)
		opacity 0
		span(8/12, offset: 2/12)
		font-size 2em
		margin-top 15px
		text-align center
		color $yellow
		cursor pointer
	.more::after
		content '+'
		display inline-block
	.more.open::after
		content '-'
		font-size 1.3em
			
body.project
	overflow hidden
	#lightbox
		opacity 1
		visibility visible

body.project.lightbox
	#lightbox 
		.inner, .more
			opacity 1
			transform(translateY(0px))